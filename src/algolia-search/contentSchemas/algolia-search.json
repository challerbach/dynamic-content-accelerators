{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{CONTENT_TYPE_BASEPATH}/algolia-search.json",
	"title": "Algolia Search",
	"description": "Facilitates an Algolia Search",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"index": {
			"type": "string",
			"minLength": 0,
			"maxLength": 50,
			"title": "Index",
			"description": "The name of the index to use in Algolia"
		}
	},
	"propertyOrder": ["index"]
}
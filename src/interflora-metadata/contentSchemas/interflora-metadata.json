{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/interflora-metadata.json",
  "definitions": {
    "metadata": {
      "title": "Interflora Metadata",
      "type": "object",
      "properties": {
        "pznsegment": {
          "title": "Personalization Segment",
          "description": "Select the segment(s) this content relates to",
          "type": "array",
          "minItems": 0,
          "maxItems": 10,
          "items": {
            "type": "string",
            "enum": ["Bargain Hunter", "Big Spender"]
          },
          "default": ""
        },
        "occasion": {
          "title": "Occasion",
          "description": "Select the occasion this content relates to",
          "type": "array",
          "minItems": 0,
          "maxItems": 10,
          "items": {
            "type": "string",
            "enum": [
              "Anniversary",
              "Apology",
              "Baby",
              "Birthday",
              "Congratulations",
              "Get Well",
              "Good Luck",
              "New Home",
              "Retirement",
              "Romantic",
              "Surprise",
              "Thank you",
              "Wedding"
            ]
          }
        },
        "category": {
          "title": "Category",
          "description": "Select the category(s) this content relates to",
          "type": "array",
          "minItems": 0,
          "maxItems": 10,
          "items": {
            "type": "string",
            "enum": [
              "Women/Clothing",
              "Women/Bags",
              "Women/Shoes",
              "Men/Clothing",
              "Men/Bags",
              "Men/Shoes",
              "Accessories",
              "Sale"
            ]
          }
        },
        "color": {
          "title": "Color",
          "description": "Select the color(s) this content relates to",
          "type": "array",
          "minItems": 0,
          "maxItems": 10,
          "items": {
            "type": "string",
            "enum": [
              "white",
              "pink",
              "yellow",
              "red",
              "lilac",
              "orange",
              "blue",
              "cream",
              "purple",
              "green",
              "beige"
            ]
          }
        },
        "flower-type": {
          "title": "Flower Type",
          "description": "Select the flower type(s) this content relates to",
          "type": "array",
          "minItems": 0,
          "maxItems": 10,
          "items": {
            "type": "string",
            "enum": [
              "rose",
              "carnation",
              "chrysanthemum",
              "lily",
              "hydrangea",
              "gladioli",
              "eucalyptus",
              "freesia",
              "delphinium",
              "orchid",
              "tulip",
              "veronica",
              "germini",
              "iris"
            ]
          }
        },
        "ranking": {
          "title": "Ranking",
          "description": "Ranking for this content (1-10)",
          "type": "number",
          "minimum": 0,
          "maximum": 10
        },
        "searchTerms": {
          "title": "Search terms",
          "description": "Enter any specific keywords for search",
          "type": "array",
          "minItems": 0,
          "maxItems": 10,
          "items": {
            "type": "string"
          }
        }
      },
      "propertyOrder": [
        "category",
        "color",
        "flowerType",
        "occasion",
        "pznsegment",
        "searchTerms",
        "ranking"
      ]
    }
  }
}

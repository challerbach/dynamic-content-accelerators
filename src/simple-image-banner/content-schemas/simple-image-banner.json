{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/simple-image-banner.json",
  "title": "Simple Image Banner",
  "description": "Simple Image Banner accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "SimpleImageBanner"
    },
    "_meta":{
      "type":"object",
      "properties":{
        "deliveryKey":{
          "type":"string",
          "title":"Delivery key",
          "description": "The delivery key is used as the URL slug"
        }
      },
      "required": ["deliveryKey"]
    }, 
    "bannerImage": {
      "description": "",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/simple-image.json"
        }
      ],
      "title": "Banner image"
    },
    "link": {
      "title": "Link",
      "type": "string",
      "description": "Link for this banner",
      "minLength": 0,
      "maxLength": 2000
    },
    "analytics": {
      "title": "Analytics Label",
      "type": "string",
      "description": "Analytics Label for this banner",
      "minLength": 0,
      "maxLength": 2000
    }
  },
  "propertyOrder": [
    "bannerImage",
    "link",
    "analytics",
    "component"
  ]
}

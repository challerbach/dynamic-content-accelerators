{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/article-snippet.json",
  "title": "Article Snippet",
  "description": "Article Snippet component",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "title": "Image",
      "description": "Image to show in the snippet",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/image-poi.json"
        }
      ]
    },
    "title": {
      "type": "string",
      "title": "Title",
      "description": "Article title",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "title": "Article Description",
      "description": "Blog post description",
      "validation": "Please enter less than 500 characters",
      "minLength": 0,
      "maxLength": 500
    },
    "category": {
      "type": "array",
      "title": "Category",
      "description": "The name of the category this relates too",
      "items": {
        "type": "string",
        "enum": [
          "women",
          "men",
          "beauty",
          "lighting",
          "furniture",
          "electricals",
          "inspiration"
        ]
      }
    },
    "keywords": {
      "type": "array",
      "title": "Keywords",
      "description": "Keywords",
      "validation": "",
      "items": {
        "type": "string",
        "title": "label",
        "description": "keyword",
        "validation": "keyword",
        "minLength": 0,
        "maxLength": 500
      },
      "minItems": 0,
      "maxItems": 50
    },
    "author": {
      "type": "string",
      "title": "Author",
      "description": "The author of the post",
      "enum": [
        "Hazel Nutkins",
        "Macadamia Smith",
        "Sally Almond",
        "Desmond Cobnut",
        "Jose Pistachio"
      ]
    },
    "blogdate": {
      "type": "string",
      "title": "Creation Date",
      "description": "Enter date (yyyy/mm/dd) that blog is created",
      "validation": "YYYY/MM/DD",
      "format": "text",
      "minLength": 0,
      "maxLength": 10
    },
    "flower-type": {
      "title": "Flower Type",
      "description": "Select the flower type(s) this content relates to",
      "type": "array",
      "minItems": 0,
      "maxItems": 10,
      "items": {
        "type": "string",
        "enum": [
          "rose",
          "carnation",
          "chrysanthemum",
          "lily",
          "hydrangea",
          "gladioli",
          "eucalyptus",
          "freesia",
          "delphinium",
          "orchid",
          "tulip",
          "veronica",
          "germini",
          "iris"
        ]
      }
    }
  },
  "propertyOrder": [
    "blogdate",
    "category",
    "image",
    "title",
    "description",
    "keywords",
    "author"
  ]
}

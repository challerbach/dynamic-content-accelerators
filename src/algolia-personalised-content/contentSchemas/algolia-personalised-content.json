{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{CONTENT_TYPE_BASEPATH}/algolia-personalised-content.json",
	"title": "Algolia Personalised Content",
	"description": "Facilitates an Algolia Search",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"type": {
			"type": "string",
			"title": "Type",
			"description": "Type of content to display",
			"enum": [
			  "Banners",
			  "Articles"
			]
		},
		"query": {
			"type": "string",
			"minLength": 0,
			"maxLength": 255,
			"title": "Query",
			"description": "The query used to search"
		},
		"max": {
			"type": "string",
			"title": "Max Items",
			"description": "Maximum Number of items to display (defaults to 1)",
			"enum": [
			  "1",
			  "2",
			  "3",
			  "5"
			]
		}
	},
	"propertyOrder": ["type", "search", "max"]
}
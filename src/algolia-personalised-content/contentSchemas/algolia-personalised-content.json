{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{CONTENT_TYPE_BASEPATH}/algolia-personalised-content.json",
	"title": "Algolia Personalised Content",
	"description": "Facilitates an Algolia Search",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"index": {
			"type": "string",
			"minLength": 0,
			"maxLength": 50,
			"title": "Index",
			"description": "The name of the index to use in Algolia"
		},
		"query": {
			"type": "string",
			"minLength": 0,
			"maxLength": 255,
			"title": "Query",
			"description": "The query used to search"
		},
		"attributes": {
			"title": "Attributes",
			"description": "THe attributes to return",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
			   "type": "string"
			}
		}
	},
	"propertyOrder": ["index", "query", "attributes"]
}
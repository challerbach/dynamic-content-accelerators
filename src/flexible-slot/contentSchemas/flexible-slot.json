{
    "$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{CONTENT_TYPE_BASEPATH}/flexible-slot.json",
	"title": "Flexible Slot",
	"description": "Flexible Slot",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"contentTypes": {
            "type": "array",
            "title": "Content",
            "description": "Select and order content in this slot",
            "items": {
              "allOf": [
                {
                  "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                },
                {
                  "properties": {
                    "contentType": {
                      "title": "",
                      "enum": [
                        "{CONTENT_TYPE_BASEPATH}/banner-personalised.json",
                        "{CONTENT_TYPE_BASEPATH}/image-poi.json",
                        "{CONTENT_TYPE_BASEPATH}/curated-product-list-ct.json",
                        "{CONTENT_TYPE_BASEPATH}/landing-page.json",
                        "{CONTENT_TYPE_BASEPATH}/rich-text.json",
                        "{CONTENT_TYPE_BASEPATH}/interflora-video.json",
                        "{CONTENT_TYPE_BASEPATH}/cardlist.json",
                        "{CONTENT_TYPE_BASEPATH}/algolia-personalised-content.json"
                      ]
                    }
                  }
                }
              ]
            }
        }
	},
	"propertyOrder": ["contentTypes"]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{CONTENT_TYPE_BASEPATH}/landing-page.json",
	"title": "Landing Page",
	"description": "Landing Page component",
	"allOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
      ],
      "type": "object",
      "properties": {
        "seo": {
          "title": "SEO",
          "description": "",
          "type": "object",
          "properties": {
            "title": {
              "title": "Title",
              "description": "Meta title field",
              "type": "string",
              "minLength": 0,
              "maxLength": 100
            },
            "description": {
              "title": "Description",
              "description": "Meta description field",
              "type": "string",
              "minLength": 0,
              "maxLength": 200
            }
          },
          "propertyOrder": ["title", "description"]
        },
        "contentTypes": {
          "type": "array",
          "title": "Layout",
          "description": "Select and order content to display in the container",
          "items": {
            "allOf": [
              {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
              },
              {
                "properties": {
                  "contentType": {
                    "title": "",
                    "enum": [
                      "{CONTENT_TYPE_BASEPATH}/banner-personalised.json",
                      "{CONTENT_TYPE_BASEPATH}/image-poi.json",
                      "{CONTENT_TYPE_BASEPATH}/curated-product-list-ct.json",
                      "{CONTENT_TYPE_BASEPATH}/rich-text.json",
                      "{CONTENT_TYPE_BASEPATH}/cardlist.json",
                      "{CONTENT_TYPE_BASEPATH}/algolia-personalised-content.json"
                      "{CONTENT_TYPE_BASEPATH}/algolia-search.json"
                    ]
                  }
                }
              }
            ]
          }
        }
      }
    }
    
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/image.json",
  "title": "Image",
  "description": "Image accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "Image"
    },
    
    "image": {
      "title": "Image",
      "description": "",
      "type": "object",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "imageAltText": {
      "type": "string",
      "minLength": 0,
      "maxLength": 150,
      "title": "Image alt text"
    },
    "seoText": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "SEO text",
      "pattern": "^[/A-Za-z0-9+_-]+$",
      "description": "Enter only alphanumeric, _, -, +, / characters"
    },
    "imageEffect": {
      "title": "Image Effect",
      "description": "Add an image effect",
      "type": "string",
      "enum": [
        "Zoom-in dark",
        "Zoom-in blur",
        "Linear",
        "Double-line Horizontal",
        "Parallax"
      ]
    },
    "gifImage": {
      "title": "Gif image",
      "description": "Is the image a gif?",
      "type": "boolean"
    },
    "togglePOI": {
      "title": "toggle POI",
      "description": "toggle POI?",
      "type": "boolean"
    }
  },
  "propertyOrder": ["image", "imageAltText", "seoText", "imageEffect", "gifImage", "togglePOI", "component" ]
}

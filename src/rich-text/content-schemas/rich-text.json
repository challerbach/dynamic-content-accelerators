{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/rich-text.json",
  "title": "Rich Text",
  "description": "Rich Text accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "RichText"
    },
    "text": {
      "type": "array",
      "ui:extension": {
        "name": "rich-text",
        "params": {
          "language": "json",
          "tools": {
            "dc-content-link": {
              "contentTypes": [
                "https://presalesadisws.s3.eu-west-1.amazonaws.com/dynamic-content/accelerators/composable-commerce/v1/content-schemas/image.json"
              ],
              "contentTypeSettings": {
                "cards": {
                  "*": "https://{{vse.domain}}/v1/content/demo/content-item/{{content.sys.id}}?template=acc-template-cardsPreview"
                }
              }
            }
          }
        }
      }
    }
  },
  "propertyOrder": ["text", "component"]
}

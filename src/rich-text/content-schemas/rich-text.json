{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/rich-text.json",
  "title": "Rich Text",
  "description": "Rich Text accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "RichText"
    },
    "text": {
      "type": "array",
      "ui:extension": {
        "name": "rich-text",
        "params": {
          "language": "json",
          "tools": {
            "dc-content-link": {
              "contentTypes": [
                "{CONTENT_TYPE_BASEPATH}/image.json",
                "{CONTENT_TYPE_BASEPATH}/simple-image-banner.json",
                "{CONTENT_TYPE_BASEPATH}/simple-banner.json",
                "{CONTENT_TYPE_BASEPATH}/advanced-banner.json",
                "{CONTENT_TYPE_BASEPATH}/blog-list.json",
                "{CONTENT_TYPE_BASEPATH}/title.json",
                "{CONTENT_TYPE_BASEPATH}/card.json",
                "{CONTENT_TYPE_BASEPATH}/card-list.json",
                "{CONTENT_TYPE_BASEPATH}/slider.json",
                "{CONTENT_TYPE_BASEPATH}/split-block.json",
                "{CONTENT_TYPE_BASEPATH}/rich-text.json",
                "{CONTENT_TYPE_BASEPATH}/video.json",
                "{CONTENT_TYPE_BASEPATH}/page.json"
              ],
              "contentTypeSettings": {
                "cards": {
                  "*": "https://{{vse.domain}}/v1/content/demo/content-item/{{content.sys.id}}?template=amp-template-cardsPreview&locale={{locales}},en-*,*"
                }
              }
            }
          }
        }
      }
    },
    "align": {
      "title": "Horizontal align",
      "description": "Horizontal text align",
      "type": "string",
      "enum": [
        "left",
        "center",
        "right"
      ]
    }
  },
  "propertyOrder": ["text", "align", "valign", "component"]
}

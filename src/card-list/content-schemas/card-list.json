{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/card-list.json",
  "title": "Card List",
  "description": "Card list accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "CardList"
    },
    "header": {
      "type": "string",
      "minLength": 0,
      "maxLength": 50,
      "title": "Header"
    },
    "cards": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "enum": [
                  "{CONTENT_TYPE_BASEPATH}/card.json",
                  "{CONTENT_TYPE_BASEPATH}/advanced-banner.json",
                  "{CONTENT_TYPE_BASEPATH}/simple-image-banner.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1,
      "maxItems": 20,
      "title": "Cards"
    }
  },
  "propertyOrder": ["header", "cards", "component"]
}

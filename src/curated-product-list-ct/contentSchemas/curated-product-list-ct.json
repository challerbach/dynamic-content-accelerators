{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "{CONTENT_TYPE_BASEPATH}/curated-product-list-ct.json",
	"title": "Curated Product List (CommerceTools)",
	"description": "A Curated Product List",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"header": {
			"type": "string",
			"minLength": 0,
			"maxLength": 50,
			"title": "Header",
			"description": "Header for this product list"
		},
		"heroList": {
			"type": "boolean",
			"title": "Hero format",
			"description": "Hero format supports exactly 3 products"
		},
		"products": {
			"title": "Product Selector",
			"description": "List of products to display",
			"type": "array",
			"minItems": 1,
			"maxItems": 50,
			"items": {
				"type": "string"
			},
			"ui:extension": {
				"name": "product-selector-commerce-tools"
			}
		}
	},
	"propertyOrder": ["header", "heroList", "products"]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gap.com/slider.json",
  "title": "Slider",
  "description": "Slider accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "Slider"
    },
    "slides": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "enum": [
                  "https://gap.com/banner.json",
                  "https://gap.com/image.json",
                  "https://gap.com/video.json"
                ]
              }
            }
          }
        ]
      },
      "title": "Slides",
      "minItems": 1,
      "maxItems": 8
    },
    "loop": {
      "type": "boolean",
      "title": "Loop slider"
    },
    "navigationDots": {
      "type": "boolean",
      "title": "Navigation dots"
    }
  },
  "propertyOrder": [
    "slides",
    "loop",
    "navigationDots",
    "component"
  ]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gap.com/page.json",
  "title": "Page",
  "description": "Page accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "Page"
    },
    "contentTypes": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "enum": [
                  "https://gap.com/image.json",
                  "https://gap.com/banner.json",
                  "https://gap.com/simple-image-banner.json",
                  "https://gap.com/simple-image-banner-localised.json",
                  "https://gap.com/advanced-banner.json",
                  "https://gap.com/blog-post.json",
                  "https://gap.com/blog-list.json",
                  "https://gap.com/card.json",
                  "https://gap.com/card-list.json",
                  "https://gap.com/external-block.json",
                  "https://gap.com/promo-list.json",
                  "https://gap.com/slider.json",
                  "https://gap.com/split-block.json",
                  "https://gap.com/text.json",
                  "https://gap.com/rich-text.json",
                  "https://gap.com/video.json"
                ]
              }
            }
          }
        ]
      },
      "title": "Content types"
    }
  },
  "propertyOrder": ["contentTypes", "component"]
}

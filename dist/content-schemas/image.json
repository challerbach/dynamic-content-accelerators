{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://presalesadisws.s3.eu-west-1.amazonaws.com/dynamic-content/accelerators/composable-commerce/v1/content-schemas/image.json",
  "title": "Image",
  "description": "Image accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "Image"
    },
    "image": {
      "title": "Image",
      "description": "",
      "type": "object",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "imageAltText": {
      "type": "string",
      "minLength": 0,
      "maxLength": 150,
      "title": "Image alt text"
    },
    "seoText": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "SEO text",
      "pattern": "^[/A-Za-z0-9+_-]+$",
      "description": "Enter only alphanumeric, _, -, +, / characters"
    },
    "roundel": {
      "title": "Roundels",
      "type": "array",
      "maxItems": 5,
      "items": {
        "allOf": [
          {
            "$ref": "https://presalesadisws.s3.eu-west-1.amazonaws.com/dynamic-content/accelerators/composable-commerce/v1/content-schemas/accelerator-partials.json#/definitions/roundel"
          }
        ]
      }
    }
  },
  "propertyOrder": ["image", "imageAltText", "seoText", "roundel"]
}

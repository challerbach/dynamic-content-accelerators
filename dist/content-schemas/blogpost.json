        }
      ]
    },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "title": "Title"
    },
    "content": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "Content",
